{{- $.Scratch.Add "index" slice -}}
{{- range where .Site.Pages "Type" "not in"  (slice "page" "json") -}}
{{- $.Scratch.Add "index" (dict "id" .UniqueID "url" .Permalink "title" .Title "tags" .Params.tags "description" .Description "content" .Plain) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}